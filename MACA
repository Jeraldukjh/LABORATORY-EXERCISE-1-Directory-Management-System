string showFileList() {
   return "Files in Current Directory:\n1. file1.txt\n2. file2.cpp\n3. report.doc\n4. image.png\n";
}

string createNewDirectory(const string& dirName) {
    return "Directory '" + dirName + "' created successfully!\n";
}

string changeWorkingDirectory(const string& dirName) {
    return "Current Directory: C:\\Users\\UserName\\" + dirName + "\n";
}




